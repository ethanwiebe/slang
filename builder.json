{
	"srcDirs":["src"],
	"srcExts":["cpp"],
	"objExt":"o",
	"objDir":[
		"build",
		"%mode"
	],
	"outputDir":[
		"bin",
		"%mode"
	],
	"outputName":"slang",
	"compileCmd":[
		"g++",
		"-c",
		"%compileFlags"
	],
	"linkCmd":[
		"g++",
		"%linkFlags"
	],
	
	"compileFlags":[
		"-std=c++20",
		"-fno-exceptions",
		"-fno-rtti",
		"-Wall",
		"-Wextra",
		"-o",
		"%out",
		"%in"
	],
	"linkFlags":[
		"-o",
		"%out",
		"%in"
	],
	
	"modes":{
		"release":{
			"compileFlags":[
				"%compileFlags",
				"-DNDEBUG",
				"-O3",
				"-march=native"
			],
			"linkFlags":[
				"%linkFlags",
				"-s"
			],
			"outputDir":"bin"
		},
		"debug":{
			"compileFlags":[
				"%compileFlags",
				"-g",
				"-O0"
			]
		},
		"test":{
			"compileCmd":"",
			"linkCmd":"",
			"preCmds":[
				["bin/slang","tests/*.sl"]
			]
		},
		"profile":{
			"compileFlags":[
				"%compileFlags",
				"-DNDEBUG",
				"-O3",
				"-g",
				"-pg",
				"-march=native"
			],
			"linkFlags":[
				"%linkFlags",
				"-pg"
			]
		}
	}
}
